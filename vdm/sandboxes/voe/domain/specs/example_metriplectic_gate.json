{
  "$schema": "vdm://schemas/gate.v1.json",
  "name": "vdm-metriplectic-validation",
  "version": "1.0.0",
  "description": "Metriplectic structure validation with A2 Axiom gates",
  "hard_gates": [
    {
      "metric": "g1_degeneracy",
      "op": "<=",
      "value": 1e-10,
      "description": "J-branch degeneracy: ⟨J·δΣ, δΣ⟩ ≤ 1e-10·N"
    },
    {
      "metric": "g2_degeneracy",
      "op": "<=",
      "value": 1e-10,
      "description": "M-branch degeneracy: ⟨M·δℐ, δℐ⟩ ≤ 1e-10·N"
    },
    {
      "metric": "j_skew_symmetry_norm",
      "op": "<=",
      "value": 1e-12,
      "description": "J skew-symmetry: ||J + J^T|| ≤ 1e-12"
    },
    {
      "metric": "m_psd_min_eigenvalue",
      "op": ">=",
      "value": -1e-12,
      "description": "M positive semi-definite: λ_min(M) ≥ -1e-12"
    },
    {
      "metric": "delta_L_h",
      "op": "<=",
      "value": 0.0,
      "description": "Lyapunov non-increase: ΔL_h ≤ 0"
    },
    {
      "metric": "noether_energy_drift",
      "op": "<=",
      "value": 1e-12,
      "description": "Energy conservation: |ΔE| ≤ 1e-12"
    },
    {
      "metric": "noether_momentum_drift",
      "op": "<=",
      "value": 1e-12,
      "description": "Momentum conservation: |ΔP| ≤ 1e-12"
    }
  ],
  "soft_objectives": [
    {
      "metric": "strang_defect_slope",
      "goal": "max",
      "description": "Strang splitting defect slope (target ≈ 3)"
    },
    {
      "metric": "two_grid_convergence_rate",
      "goal": "max",
      "description": "Two-grid asymptotic convergence rate"
    }
  ],
  "allowlists": {
    "languages": ["python", "cpp"],
    "libs": {
      "python": ["numpy==1.26.4", "scipy==1.11.4"],
      "cpp": ["eigen3"]
    }
  }
}
